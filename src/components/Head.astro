    "@type": "PostalAddress",
    "streetAddress": "11 de Septiembre 3687",
    "addressLocality": "Mar del Plata",
    "addressRegion": "Buenos Aires",
    "postalCode": "B7600",
    "addressCountry": "AR"
  },
  "geo": {
    "@type": "GeoCoordinates",
    "latitude": -38.0236,
    "longitude": -57.5475
  },
  "openingHoursSpecification": {
    "@type": "OpeningHoursSpecification",
