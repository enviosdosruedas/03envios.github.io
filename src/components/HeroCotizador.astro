---
export interface Props {
  title: string;
  subtitle?: string;
  description: string;
  buttonText?: string;
  buttonUrl?: string;
  secondaryButtonText?: string;
  secondaryButtonUrl?: string;
  imageSrc?: string;
  imageAlt?: string;
}

const {
  title = "Cotizador Envíos Express",
  subtitle = "Envios DosRuedas",
  description = "Calcule el costo de su envío express en Mar del Plata",
  buttonText = "Cotiza tu Envío",
  buttonUrl = "/cotizador-envios-express",
  secondaryButtonText = "Contacto",
  secondaryButtonUrl = "/contacto",
  imageSrc = "/LogoEnviosDosRuedas.webp",
  imageAlt = "Envios DosRuedas"
} = Astro.props;
---

<section class="relative bg-gradient-to-br from-royal-blue via-marian-blue to-polynesian-blue py-12 md:py-20 overflow-hidden">
  <!-- Background pattern -->
  <div class="absolute inset-0 opacity-10">
    <div class="absolute inset-0" style="background-image: url('data:image/svg+xml,%3Csvg width=\'100\' height=\'100\' viewBox=\'0 0 100 100\' xmlns=\'http://www.w3.org/2000/svg\'%3E%3Cpath d=\'M11 18c3.866 0 7-3.134 7-7s-3.134-7-7-7-7 3.134-7 7 3.134 7 7 7zm48 25c3.866 0 7-3.134 7-7s-3.134-7-7-7-7 3.134-7 7 3.134 7 7 7zm-43-7c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zm63 31c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zM34 90c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zm56-76c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zM12 86c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm28-65c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm23-11c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zm-6 60c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm29 22c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zM32 63c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zm57-13c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zm-9-21c1.105 0 2-.895 2-2s-.895-2-2-2-2 .895-2 2 .895 2 2 2zM60 91c1.105 0 2-.895 2-2s-.895-2-2-2-2 .895-2 2 .895 2 2 2zM35 41c1.105 0 2-.895 2-2s-.895-2-2-2-2 .895-2 2 .895 2 2 2zM12 60c1.105 0 2-.895 2-2s-.895-2-2-2-2 .895-2 2 .895 2 2 2z\' fill=\'%23ffffff\' fill-opacity=\'1\' fill-rule=\'evenodd\'/%3E%3C/svg%3E');">
    </div>
  </div>

  <div class="container mx-auto px-4 relative z-10">
    <div class="flex flex-col md:flex-row items-center justify-between">
      <!-- Left content -->
      <div class="w-full md:w-1/2 mb-8 md:mb-0 text-white">
        <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-mikado-yellow text-royal-blue mb-4 animate-pulse">
          <i class="fas fa-star mr-1"></i>
          {subtitle}
        </span>
        <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold mb-4 text-white leading-tight">
          {title}
        </h1>
        <p class="text-gray-200 mb-6 max-w-lg">
          {description}
        </p>
        <div class="flex flex-wrap gap-4">
          {buttonText && buttonUrl && (
            <a 
              href={buttonUrl} 
              class="inline-flex items-center px-6 py-3 rounded-lg bg-mikado-yellow hover:bg-gold text-royal-blue font-medium transition-colors duration-200 shadow-lg hover:shadow-xl"
            >
              {buttonText}
              <i class="fas fa-arrow-right ml-2"></i>
            </a>
          )}
          {secondaryButtonText && secondaryButtonUrl && (
            <a 
              href={secondaryButtonUrl} 
              class="inline-flex items-center px-6 py-3 rounded-lg bg-transparent hover:bg-white/10 text-white border border-white font-medium transition-colors duration-200"
            >
              {secondaryButtonText}
              <i class="fas fa-envelope ml-2"></i>
            </a>
          )}
        </div>
      </div>
      
      <!-- Right image -->
      <div class="w-full md:w-1/2 flex justify-center md:justify-end">
        <div class="relative">
          <div class="absolute inset-0 bg-mikado-yellow rounded-full blur-3xl opacity-20 transform -translate-x-4 translate-y-4"></div>
          <img 
            src={imageSrc} 
            alt={imageAlt}
            class="relative z-10 max-w-xs md:max-w-sm lg:max-w-md mx-auto rounded-lg shadow-2xl"
            width="400"
            height="400"
          />
        </div>
      </div>
    </div>
  </div>
</section>