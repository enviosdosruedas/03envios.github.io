---
import Layout from '../layouts/Layout.astro';

import HeroSecundarios from "../components/HeroSecundarios.astro";
import StatsSection from '../components/StatsSection.astro';
import CotizadorSection from '../components/CotizadorSection.astro';
import EmprendedoresSection from '../components/EmprendedoresSection.astro';
import ServiciosSection from '../components/ServiciosSection.astro';
import SocialBanner from '../components/SocialBanner.astro';

const title = "Envíos para Emprendedores";
const description = "This is a basic page generated automatically.";

---

<Layout 
  title={title}
  description={description}
>
  <!-- Hero Section -->
  <HeroSecundarios
    title="Envios DosRuedas"
    description="Somos tu solución confiable en servicios de mensajería y delivery en Mar del Plata. Ofrecemos soluciones rápidas, seguras y económicas para todas tus necesidades de envío."
  />

  <!-- Stats Section -->
  <StatsSection />
  
  <!-- Cotizador Section -->
  <CotizadorSection />
  
  <!-- Emprendedores Section -->
  <EmprendedoresSection />
  
  <!-- Servicios Section -->
  <ServiciosSection />
  
  <!-- Social Banner -->
  <SocialBanner />
  
</Layout>