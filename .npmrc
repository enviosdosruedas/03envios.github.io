# Usar pnpm como gestor de paquetes por defecto
package-manager=pnpm@8.15.4

# Guardar versiones exactas (sin ^ o ~)
save-exact=true

# No crear enlaces simbólicos innecesarios en node_modules
shamefully-hoist=false

# Activar modo estricto de dependencias
strict-peer-dependencies=true

# Guardar lockfile en formato YAML
lockfile-format=yaml

# Habilitar compatibilidad con workspaces si los usás
enable-pre-post-scripts=true
